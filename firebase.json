{
  "database": {
    "rules": "database.rules.json"
  },
  "hosting": {
    "public": "build",
    "appAssociation": "AUTO",
    "rewrites": [
      {
        "source": "/admin",
        "destination": "/index.html",
        "type": 302
      }
    ],
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ]
  }
}